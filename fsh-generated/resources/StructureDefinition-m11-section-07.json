          {
            "code": "BackboneElement"
          }
        ],
        "mustSupport": true
      },
      {
        "id": "Composition.section:dropout.section:withdrawal.title",
        "path": "Composition.section.section.title",
        "patternString": "Withdrawal from the Trial"
